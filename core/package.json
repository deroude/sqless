{
  "name": "@sqless/core",
  "version": "0.0.1",
  "description": "SQLess development platform",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "handlebars src/business/templates -f src/business/templates/precompiled.js && npm run lint && npm run tsc",
    "postbuild": "cpy **/* !**/*.ts !**/*.handlebars ../dist/ --cwd=src/ --no-overwrite --parents",
    "build:watch": "tsc -w",
    "dev:start": "nodemon --watch dist --exec node .",
    "dev": "concurrently \"npm run build:watch\" \"npm run dev:start\"",
    "start": "node ."
  },
  "bin": {
    "sqless": "bin/start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deroude/sqless.git"
  },
  "keywords": [
    "serverless",
    "sql",
    "frontend",
    "web"
  ],
  "author": "Valentin Raduti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deroude/sqless/issues"
  },
  "homepage": "https://github.com/deroude/sqless#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^3.16.11",
    "handlebars": "^4.7.6",
    "js-yaml": "3.14.0",
    "lodash": "^4.17.20",
    "pg": "^8.3.0",
    "swagger-ui-express": "^4.1.4",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/handlebars": "^4.1.0",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.159",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.0.27",
    "@types/pg": "^7.14.4",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yargs": "11.0.0",
    "concurrently": "^5.2.0",
    "cpy-cli": "^3.1.1",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  }
}
